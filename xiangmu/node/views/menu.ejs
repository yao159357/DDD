<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <% var menus = [ {
      title: '系统首页',
      icon: 'fa-home',
      path: '/',
      role:1
    },
    {
      title: '商品管理',
      icon: 'fa-map-o',
      path: '/pro',
      role:1
    },
    {
      title: '用户管理',
      icon: 'fa-user',
      path: '/user',
      role:1
    },
    {
      title: '购物车管理',
      icon: 'fa-institution',
      path: '/cart',
      role:2
