    {
      title: '订单管理',
      icon: 'fa-key',
      path: '/order',
      role:2
    },
    {
      title: '消息管理',
      icon: 'fa-gears',
      path: '/message',
      role:1
    },
    {
      title: '轮播图管理',
      icon: 'fa-gears',
      path: '/banner',
      role:1
    } ]%>
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">HEADER</li>
      <!-- Optionally, you can add icons to the links -->
      <% for (var i = 0; i < menus.length; i++) { %>
        <% menus %>
        <% if(role >= menus[i].role) { %>
        <li class="<%= activeindex === i ? 'active' : '' %>"><a href="<%= menus[i].path %>"><i class="fa <%= menus[i].icon %>"></i> <span><%= menus[i].title %></span></a></li>
        <% } %>
      <% } %>
